<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="8">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMimus"
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:minWidth="60dp"
        app:iconGravity="textStart"
        app:strokeColor="@color/colorGrabPrimary"
        app:iconTint="@color/colorGrabPrimary"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        app:icon="@drawable/ic_remove_circle_outline_black_24dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:id="@+id/etIncreaseVal"
        android:text="0"
        android:textSize="18sp"
        android:minWidth="50dp"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPlus"
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:minWidth="60dp"
        app:icon="@drawable/ic_add_circle_outline_black_24dp"
        app:iconGravity="textStart"
        app:strokeColor="@color/colorGrabPrimary"
        app:iconTint="@color/colorGrabPrimary"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_height="wrap_content" />

</LinearLayout>